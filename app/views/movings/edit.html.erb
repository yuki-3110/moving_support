<%#= render 'form', moving: @moving %>

<div class="container" style=" margin-top: 200px;" >
  <%= form_with(model: @moving, local: true) do |form| %>
    <% if @moving.errors.any? %>
      <div id="error_explanation">
        <h4><%= pluralize(@moving.errors.count, "件のエラーが発生しました") %> </h4>
        <ul>
          <% @moving.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :引越予定日を入力してください %>
      <%= form.date_field :moving_day, class: 'form-control' %>
    </div>

    <div class="actions mt-5">
      <%= form.submit "設定する", class:'btn btn-block btn-primary btn-sm' %>
    </div>
  <% end %>
</div>

