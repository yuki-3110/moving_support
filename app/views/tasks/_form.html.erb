<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :deadline %>
    <%= form.select :deadline, Task.deadlines.keys.map {|k| [t("enums.task.deadline.#{k}"), k]}, include_blank: '選択してください', class: 'form-control'  %>
  </div>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, placeholder: "タスクタイトルを入力しましょう", class: 'form-control mb-4' %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content, placeholder: "タスクに関する情報を入力しましょう", class: 'form-control mb-4' %>
  </div>


  <div class="actions">
    <%= form.submit class:'btn btn-block btn-primary btn-sm mt-4' %>
  </div>
<% end %>
